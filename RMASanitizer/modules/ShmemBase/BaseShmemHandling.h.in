#pragma once

#include <shmem.h>
#include <cstdint>

/**
 * Converts a team handle to an integer.
 * @param team to convert.
 * @return integer.
 */
inline @MUST_SHMEM_TEAM_TYPE@ BaseShmem_ShmemTeam2int (shmem_team_t team) { return (@MUST_SHMEM_TEAM_TYPE@)(team); }


/**
 * Converts a context handle to an integer.
 * @param ctx to convert.
 * @return integer.
 */
inline @MUST_SHMEM_CTX_TYPE@ BaseShmem_ShmemCtx2int (shmem_ctx_t ctx) { return (@MUST_SHMEM_CTX_TYPE@)(ctx); }
