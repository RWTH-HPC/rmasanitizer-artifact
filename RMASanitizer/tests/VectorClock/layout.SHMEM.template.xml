<!DOCTYPE layout-specification SYSTEM "@MUST_SPECIFICATION_DTD_PATH@/layout-specification.dtd">
<layout-specification>
	<levels>
		<level order="0" size="${totalProcs}" place-name="thread_app">
			<analyses>
			    <analysis name="DatatypePredefs" group="MUST_Resource"/>
			    <analysis name="CommPredefs" group="MUST_Resource"/>
                <analysis name="ShmemTeamPredefs" group="MUST_Resource"/>
                <analysis name="ShmemSegmentPredefs" group="MUST_Resource"/>
				${level0ModString}
			</analyses>
		</level>
		<level order="1" size="${numPlaces}" place-name="thread_place">
			<analyses>
                <analysis name="SHMEMVectorClockWrapper" group="MUST_VectorClock"/>
				${level1ModString}
			</analyses>
		</level>
		<level order="2" size="1" place-name="mpi_place">
            <analyses>
                <analysis name="MsgLoggerStdOut" group="MUST_Base" />
            </analyses>
        </level>
    </levels>
	<communications>
        <default>
            <comm-strategy name="CStratSimpleUp">
                <settings></settings>
            </comm-strategy>
            <comm-protocol name="CProtMpiSplited">
                <settings></settings>
            </comm-protocol>
        </default>
        <connection top-level="1" bottom-level="0">
            <comm-strategy name="CStratSimpleUp">
                <settings></settings>
            </comm-strategy>
            <comm-protocol name="CProtSharedMemory">
                <settings></settings>
            </comm-protocol>
        </connection>
        <connection top-level="2" bottom-level="1"></connection>
        <connection top-level="1" bottom-level="1">
            <comm-strategy name="CStratIsendIntra">
                <settings></settings>
            </comm-strategy>
            <comm-protocol name="CProtMpiSplited">
                <settings></settings>
            </comm-protocol>
        </connection>
    </communications>
</layout-specification>
